<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Default configuration that allows cleartext for local development -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Specific configuration for the Unicity aggregator -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">unicity.network</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
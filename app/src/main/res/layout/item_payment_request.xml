<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Amount and Symbol -->
        <TextView
            android:id="@+id/payment_request_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="0.001 SOL" />

        <!-- Message -->
        <TextView
            android:id="@+id/payment_request_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="#666666"
            android:text="Payment for coffee" />

        <!-- Recipient (who to pay) -->
        <TextView
            android:id="@+id/payment_request_recipient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="Pay to: @alice" />

        <!-- Time -->
        <TextView
            android:id="@+id/payment_request_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="#999999"
            android:text="Nov 27, 14:30" />

        <!-- Countdown timer (for pending requests with deadline) -->
        <TextView
            android:id="@+id/payment_request_countdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:visibility="gone"
            android:text="Expires in: 4:59" />

        <!-- Status (for non-pending requests) -->
        <TextView
            android:id="@+id/payment_request_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:text="Accepted" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/payment_request_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:textColor="#F44336"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <Button
                android:id="@+id/payment_request_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Pay"
                android:backgroundTint="#4CAF50"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

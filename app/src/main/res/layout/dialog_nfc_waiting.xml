<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="?android:attr/colorBackground">

    <!-- NFC Icon with animation -->
    <ImageView
        android:id="@+id/nfcIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_transfer"
        app:tint="#4169E1"
        android:layout_marginBottom="16dp" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting for NFC Connection"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="8dp" />

    <!-- Transfer Details -->
    <TextView
        android:id="@+id/transferDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap phones together to send 0.01 BTC"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Progress Indicator -->
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:indeterminateTint="#4169E1" />

    <!-- Cancel Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancelNfc"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="#4169E1" />

</LinearLayout>